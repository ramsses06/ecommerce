.col-lg-7.col-md-8.col-xs-12.col-sm-12.no-float.center-block
  %article.card.big-padding
    %table.table.table-striped.table-hover.texto-normal#table_shopping_cart
      %thead.fondo-gris.texto-claro.text-center
        %td Producto
        %td Costo
        %td Acciones
      %tbody
        -@shopping_cart.in_shopping_carts.each do |in_sh_ca|
          -product = in_sh_ca.product
          %tr{id: "#{product.id}"}
            %td= product.name
            %td.text-center= number_with_delimiter(product.pricing, delimiter: ',')
            %td.text-center= link_to "Eliminar", in_sh_ca, method: :delete

    .top-space.large-padding.text-center#payment_form
      %p.texto-medium
        %strong
          Total: $
          =number_with_delimiter(@shopping_cart.total, delimiter: ',')

    = render "/payments/buttons"
    = render "/payments/card_data"
