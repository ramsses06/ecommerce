<div class="col-md-6 col-sm-12 col-xs-12 no-float center-block">
  <div class="card medium-padding">

		<h2 class="text-center">Perdiste tu contraseña</h2>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), builder: BootstrapFormBuilder, html: { method: :post }) do |f| %>
		  <%= f.errors %>

		  <div class="field">
		    <%= f.email_field :email, autofocus: true, placeholder: "Correo electrónico" %>
		  </div>

		  <div class="actions text-center">
		    <%= f.submit "Enviar intrucciones de recuperación" %>
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>

	</div>
</div>